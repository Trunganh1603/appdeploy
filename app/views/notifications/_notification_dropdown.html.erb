<div class="dropdown notification-dropdown">
      <button class="btn btn-default dropdown-toggle"
      type = 'button'
      id = 'dropdownMenu1'
      data-toggle = 'dropdown'
      aria-haspopup = 'true' 
      aria-expanded = 'true'  >
        <%= render 'notifications/counter', counter: current_user.notifications.count %>
        <span class="glyphicon glyphicon-flag"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby = 'dropdownMenu1'>
        <li class="dropdown-header text-center">Notifications</li>
      	<li id="notificationList" ><%= render current_user.notifications.order('created_at DESC').last(5) %></li>
      	<li class="divider" role="separator">
	  		<li class="text-center">
	    		<%= link_to 'View All', notifications_path %>
	  		</li>
		    </li>
		    </li>
      </ul>
    </div>